{
  "variables": {
    "icaro_version": "autobuild",
    "base_image": "centos-7-x64",
    "region": "ams3"
  },
  "builders": [
    {
      "name": "icaro",
      "type": "digitalocean",
      "image": "{{user `base_image`}}",
      "region": "{{user `region`}}",
      "size": "s-1vcpu-1gb",
      "ssh_username": "root",
      "snapshot_name": "icaro-{{user `icaro_version`}}-{{timestamp}}"
    },
    {
      "name": "sun",
      "type": "digitalocean",
      "image": "{{user `base_image`}}",
      "region": "{{user `region`}}",
      "size": "s-1vcpu-1gb",
      "ssh_username": "root",
      "snapshot_name": "sun-{{user `icaro_version`}}-{{timestamp}}"
    },
    {
      "name": "wax",
      "type": "digitalocean",
      "image": "{{user `base_image`}}",
      "region": "{{user `region`}}",
      "size": "s-1vcpu-1gb",
      "ssh_username": "root",
      "snapshot_name": "wax-{{user `icaro_version`}}-{{timestamp}}"
    },
    {
      "name": "icarodb",
      "type": "digitalocean",
      "image": "{{user `base_image`}}",
      "region": "{{user `region`}}",
      "size": "s-1vcpu-1gb",
      "ssh_username": "root",
      "snapshot_name": "icarodb-{{user `icaro_version`}}-{{timestamp}}"
    }],

    "provisioners": [{
        "ansible_env_vars": ["ANSIBLE_HASH_BEHAVIOUR=merge"],
        "type": "ansible",
        "playbook_file": "ansible/playbook.yml",
	"extra_arguments": ["--extra-vars", "{\"icaro\":{\"tls_self_signed\" : false}}",
          "--extra-vars", "{\"icaro\":{\"version\":\"{{user `icaro_version`}}\"}}"],
	"host_alias": "{{build_name}}",
	"groups": ["icaro_nodes"]
    },
    {
        "type": "ansible",
        "playbook_file": "ansible/playbook.yml",
	"host_alias": "backends",
	"only": ["sun", "wax"]
    }]
}
